<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sayur.tetangga">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.SayurTetangga"
        android:usesCleartextTraffic="true">
        <activity android:name=".auth.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".auth.DaftarActivity"/>
        <activity android:name=".MainActivity"/>
        <activity android:name=".cart.CartActivity"/>
        <activity android:name=".cart.TfActivity"/>
        <activity android:name=".CropperActivity"/>
        <activity android:name=".cart.DetailPesananActivity"/>
        <activity android:name=".profile.ProfileActivity"/>
        <activity android:name=".produk.ProdukActivity"/>
    </application>

</manifest>